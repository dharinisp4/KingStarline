<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".NewGameActivity">
    <include layout="@layout/background_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"/>

            <TextView
                android:id="@+id/board"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Dhani Night -Single Digits Board"
                android:layout_toRightOf="@id/txtBack"
                android:layout_marginLeft="20dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textSize="17dp"
                android:textColor="@color/textColor"/>
        </android.support.v7.widget.Toolbar>


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:paddingRight="20dp">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/opensingle"

                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Open \nSingle"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/closesingle"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Close \n Single"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/opensinglepatti"

                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Open Single\n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/opendoublepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Open Double \n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativeLayout8"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/opentriplepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Open Tripple\n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/opencyclepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Open Cycle\n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativeLayout9">

                    <TextView
                        android:id="@+id/jodi"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Jodi"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_centerHorizontal="true"

                        android:visibility="visible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativeLayout1"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/closesinglepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Close Single \n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/closedoublepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Close Double\n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relativeLayout2"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/closetriplepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Close Tripple \n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/closecyclepatti"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Close Cycle \n Patti"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/transparent">

                    <TextView
                        android:id="@+id/halfsangm"

                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Half \n Sangam"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        />

                    <TextView
                        android:id="@+id/fullsangm"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:text="Full \n Sangam"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/circle"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>